<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.glyphfont.Glyph?>

<VBox id="sidePane" prefHeight="720.0" prefWidth="248.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.retardict.SidePaneController">
    <children>
        <Button id="sidePaneButton" fx:id="homeButton" mnemonicParsing="false" onAction="#switchToMainScene" prefHeight="25.0" prefWidth="250.0" stylesheets="@application.css" text="Home">
            <VBox.margin>
                <Insets />
            </VBox.margin>
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
         <graphic>
            <Glyph fx:id="homeGlyph" prefHeight="30.0" prefWidth="35.0" />
         </graphic>
        </Button>
        <Button id="sidePaneButton" fx:id="userWordButton" mnemonicParsing="false" onAction="#switchToAddWordScene" prefHeight="25.0" prefWidth="250.0" stylesheets="@application.css" text="Add New Word">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </Button>
        <Button id="sidePaneButton" fx:id="gameButton" mnemonicParsing="false" onAction="#switchToGameScene" prefHeight="25.0" prefWidth="250.0" stylesheets="@application.css" text="Game">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </Button>
      <Button id="sidePaneButton" layoutX="10.0" layoutY="150.0" mnemonicParsing="false" onAction="#switchToCatScene" prefHeight="25.0" prefWidth="250.0" stylesheets="@application.css" text="Cat">
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
         </padding>
      </Button>
        <Button id="sidePaneButton" fx:id="settingButton" mnemonicParsing="false" onAction="#switchToSettingScene" prefHeight="25.0" prefWidth="250.0" stylesheets="@application.css" text="Setting">
            <VBox.margin>
                <Insets top="370.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
        </Button>
    </children>
</VBox>
